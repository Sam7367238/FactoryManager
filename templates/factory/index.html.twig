{% extends 'base.html.twig' %}

{% block title %}Factories{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Factories</h1>
        <a href="{{ path('factory_new') }}" class="btn btn-primary btn-sm">New Factory</a>
    </div>

    <div class="row">
        {% for factory in factories %}
            <div class="col-sm-6 col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">{{ factory.name|u.truncate(30, "...") }}</h5>
                        <div class="mt-auto d-flex gap-2">
                            <a href="{{ path('factory_show', {id: factory.id}) }}" class="btn btn-outline-primary btn-sm">View</a>
                            <a href="{{ path('factory_edit', {id: factory.id}) }}" class="btn btn-outline-secondary btn-sm">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info mb-0">No factories found.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
